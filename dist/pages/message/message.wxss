page {
  background-color: #F5F5F5;
}
.root {
  height: 100%;
}
.name {
  width: 100%;
  padding-top: 5%;
  height: 100rpx;
}
.name_text {
  font-size: 110%;
  margin-left: 13%;
  margin-right: 3%;
  float: left;
  line-height: 55rpx;
}
.name_input {
  width: 50%;
  float: left;
  border-bottom: solid 3rpx;
  text-align: center;
  clear: right;
}
.picker {
  position: fixed;
  bottom: 0;
  left: 10%;
  width: 80%;
  height: 400rpx;
  z-index: 5;
}
.birthday {
  width: 100%;
  height: auto;
  margin-top: 5%;
}
.birthday_text {
  font-size: 110%;
  width: 100%;
  text-align: center;
  margin-bottom: 2%;
}
.content {
  width: 100%;
}
.content_text {
  width: 100%;
  font-size: 110%;
  text-align: center;
  margin-top: 5%;
}
.content_area {
  width: 80%;
  margin-left: 10%;
  height: 500rpx;
  margin-top: 2%;
  border: solid 2rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-top: 5rpx;
  z-index: 1;
}
.confirm {
  width: 100%;
  height: 60rpx;
  z-index: 5;
  position: fixed;
  bottom: 9%;
}
.confirm_png {
  width: 40%;
  height: 100%;
  margin-left: 30%;
  z-index: 6;
}
.cover-img {
  width: 25%;
  margin-left: 35%;
  z-index: 7;
}
.mask {
  color: #5cacf1;
}
.birthday_select {
  width: 100%;
  height: 120rpx;
}
.select1,
.select2 {
  width: 100%;
  margin-bottom: 2%;
  height: 60rpx;
}
.select1_text,
.select2_text {
  font-size: 110%;
  margin-left: 13%;
  float: left;
  margin-right: 15%;
}
.select_month {
  float: left;
  clear: right;
}
.select_day {
  float: left;
}
