<view class="root">
  <view class="before_begin" hidden="{{begin}}">
    <view class="time_png">
      <image src="../../imgs/time.png" mode="aspectFit" />
    </view>
    <ui-count-down time="2019/05/012 00:00:00" _pid="{{_pid}}"></ui-count-down>
  </view>
  <view class="span"></view>
  <view class="begin" hidden="{{!begin | detail}}">
    <view class="form">
      <view class="name">
        <view class="name_text">名字:</view>
        <input maxlength="20" class="name_input" bindinput="name_input" value="{{name}}"></input>
      </view>
      <view class="birthday">
        <view class="birthday_text">国历生日:</view>
        <view class="birthday_select">
          <view class="select1">
            <view class="select1_text">月份:</view>
            <ui-stepper min="1" max="12" value="5" class="select_month" bindsubtraction="change1" bindaddition="change1" _pid="{{_pid}}"></ui-stepper>
          </view>
          <view class="select2">
            <view class="select2_text">日期:</view>
            <ui-stepper min="1" max="31" value="12" class="select_day" bindsubtraction="change2" bindaddition="change2" _pid="{{_pid}}"></ui-stepper>
          </view>
        </view>
      </view>
      <view class="confirm">
        <view class="confirm_png" bindtap="confirm">
          <image src="../../imgs/search.png" mode="aspectFit" />
        </view>
      </view>
    </view>
  </view>
  <view class="detail" hidden="{{!detail}}">
    <view class="title">
      第{{now+1}}封信
    </view>
    <view class="texts">
      <text>{{contents[now]}}</text>
    </view>
    <view hidden="{{!hasNext}}" class="next">
      <view class="next_png" bindtap="read_next">
        <image src="../../imgs/next_email.png" mode="aspectFit" />
      </view>
    </view>
  </view>
</view>