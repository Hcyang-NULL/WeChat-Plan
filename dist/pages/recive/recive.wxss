page {
  background-color: #F5F5F5;
}
.root {
  height: 100%;
}
.before_begin {
  position: fixed;
  top: 35%;
  font-size: 110%;
  text-align: center;
  width: 100%;
}
.time_png {
  width: 100%;
  height: 60rpx;
  margin-bottom: 2%;
}
.form {
  width: 100%;
  height: 100%;
}
.span {
  height: 40rpx;
}
.name {
  width: 100%;
  margin-top: 20%;
  height: 100rpx;
}
.name_text {
  font-size: 110%;
  margin-left: 15%;
  margin-right: 3%;
  float: left;
  line-height: 55rpx;
}
.name_input {
  width: 50%;
  float: left;
  border-bottom: solid 3rpx;
  text-align: center;
  clear: right;
}
.birthday {
  width: 100%;
  height: auto;
  margin-top: 5%;
}
.birthday_text {
  font-size: 110%;
  width: 100%;
  text-align: center;
  margin-bottom: 4%;
}
.birthday_select {
  width: 100%;
  height: 120rpx;
}
.select1,
.select2 {
  width: 100%;
  margin-bottom: 2%;
  height: 60rpx;
}
.select1_text,
.select2_text {
  font-size: 110%;
  margin-left: 15%;
  float: left;
  margin-right: 15%;
  line-height: 60rpx;
}
.select_month {
  float: left;
  clear: right;
}
.select_day {
  float: left;
}
.confirm {
  width: 100%;
  margin-top: 25%;
}
.confirm_png {
  width: 100%;
  height: 120rpx;
}
.detail {
  width: 100%;
  margin-top: 2%;
}
.title {
  width: 100%;
  text-align: center;
  font-size: 130%;
  margin-bottom: 5%;
}
.texts {
  width: 80%;
  margin-left: 10%;
  word-break: break-all;
  font-size: 110%;
  margin-bottom: 25%;
}
.next {
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 30rpx;
}
.next_png {
  width: 100%;
  height: 100rpx;
}
