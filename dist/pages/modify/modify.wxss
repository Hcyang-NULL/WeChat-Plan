}
ui-tabs {
  background-color: #f5f5f5;
  padding-bottom: 1px;
}
.content {
  height: 100%;
  line-height: 60px;
  margin: 0 10px;
}
.sliderbox {
  display: table;
  width: 100%;
  background-color: white;
  text-align: center;
}
.slider-dist-index--value {
